{
  "hooks": {
    "UserPromptSubmit": [
      {
        "condition": "input.startsWith('/brandifai:help')",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/commands/brandifai/help-handler.py"
          }
        ]
      },
      {
        "condition": "input.startsWith('/brandifai:task ')",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/commands/brandifai/task-handler.py"
          }
        ]
      },
      {
        "condition": "input.startsWith('/brandifai:task-plan ')",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/commands/brandifai/task-plan-handler.py"
          }
        ]
      },
      {
        "condition": "input.startsWith('/brandifai:task-exec ')",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/commands/brandifai/task-exec-handler.py"
          }
        ]
      }
    ]
  }
}
